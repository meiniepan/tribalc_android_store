<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/split_area"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/goods_create_standard_delete2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin_arrow"
            android:src="@mipmap/dele_pic"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <include layout="@layout/split_line"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二级规格"/>
        <EditText
            android:id="@+id/goods_create_standard_name2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/text_background"
            android:textSize="@dimen/dimens_12sp"
            android:layout_marginStart="10dp"
            android:hint="输入名称,如尺码"
            android:paddingStart="6dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">
        <EditText
            android:id="@+id/goods_create_standard_value2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/dimens_12sp"
            android:hint="请输入商品标签,用'  、'号隔开,如大码、中码"
            android:background="@drawable/text_background"
            android:paddingStart="6dp"/>
        <RelativeLayout
            android:id="@+id/rl_goods_create_standard_add"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/custom_yellow">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/goods_create_standard_second"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>