<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:id="@+id/card_bg"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@mipmap/icbc_bg"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="14dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/icbc"
            android:id="@+id/card_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_18sp"
            android:textColor="#fff"
            android:text="中国储蓄银行"
            android:layout_marginStart="12dp"
            android:layout_alignTop="@+id/card_icon"
            android:layout_toEndOf="@+id/card_icon"
            android:id="@+id/card_bank_name" />

        <TextView
            android:id="@+id/card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_16sp"
            android:text="储蓄卡"
            android:textColor="#fff"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/card_bank_name"
            android:layout_alignStart="@+id/card_bank_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_type"
            android:layout_alignStart="@+id/card_type"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/card_number_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="@dimen/dimens_18sp"
                android:text="***************" />

            <TextView
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="@dimen/dimens_20sp"
                android:layout_marginStart="16dp"
                android:text="1111" />
        </LinearLayout>

        <TextView
            android:id="@+id/card_delete"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/delete"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>