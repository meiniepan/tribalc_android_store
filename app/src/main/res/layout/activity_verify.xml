<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/identify_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="#2A2A2A">

        <TextView
            android:id="@+id/serve_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/identity_verify"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <include
            android:id="@+id/identify_back"
            layout="@layout/back_img_white" />
    </RelativeLayout>

    <ViewStub
        android:id="@+id/identify_processing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/identify_empty" />

    <View
        android:id="@+id/top2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/top"
        android:background="@color/tint_bg" />

    <LinearLayout
        android:id="@+id/identify_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top2"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/verify_edit_height"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store_name"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/verify_name"
                android:layout_width="@dimen/verify_edit_width"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:hint="@string/input_store_name"
                android:textColor="@color/common_gray"
                android:textSize="@dimen/dimens_16sp" />
        </LinearLayout>

        <include layout="@layout/split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/verify_edit_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/real_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/identify_birthdayTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/input_real_name"
                android:textColor="@color/common_gray"
                android:textSize="@dimen/dimens_16sp" />
        </LinearLayout>

        <include layout="@layout/split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/verify_edit_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store_phone"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/identify_sex"
                android:layout_width="@dimen/verify_edit_width"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="请选择性别"
                android:textColor="@color/common_gray"
                android:textSize="@dimen/dimens_16sp" />
        </LinearLayout>

        <include layout="@layout/split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/verify_edit_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/identify_number"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/verify_IdCardNumber"
                android:layout_width="@dimen/verify_edit_width"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:hint="@string/input_identify_number"
                android:inputType="number"
                android:textColor="@color/common_gray"
                android:textSize="@dimen/dimens_16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/identify_finish"
        style="@style/button_style"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="认证" />

    <ImageView
        android:id="@+id/identify_sign"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/identify_area"
        android:layout_marginTop="-60dp"
        android:src="@mipmap/identify_success"
        android:visibility="gone" />
</RelativeLayout>