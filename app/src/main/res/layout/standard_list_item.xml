<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/standard_item_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/self_item_height" />
        <RelativeLayout
            android:id="@+id/standard_item_add"
            android:layout_width="@dimen/self_item_height"
            android:layout_height="@dimen/self_item_height">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add_2"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/split_area"/>
</LinearLayout>