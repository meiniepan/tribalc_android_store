<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/goods_list_picture"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        fresco:actualImageScaleType="centerInside"
        fresco:placeholderImage="@mipmap/default_pic"
        fresco:placeholderImageScaleType="centerInside"
        />

    <TextView
        android:id="@+id/goods_list_name"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:textSize="14sp"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:text="商品名称"
        android:textColor="@color/common_dark"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/goods_list_picture"
        android:layout_alignStart="@+id/goods_list_picture" />

    <TextView
        android:id="@+id/goods_list_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/dimens_12sp"
        android:text="商品品牌"
        android:textColor="@color/common_dark"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/goods_list_name"
        android:layout_alignStart="@+id/goods_list_picture" />
    <TextView
        android:id="@+id/goods_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/dimens_16sp"
        android:text="商品价格"
        android:textColor="@color/common_dark"
        android:textStyle="bold"
        android:layout_below="@+id/goods_list_brand"
        android:layout_alignStart="@+id/goods_list_brand"
        android:layout_marginBottom="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/goods_un_like"
            android:layout_alignBottom="@+id/goods_list_price"
            android:layout_alignEnd="@+id/goods_list_picture" />"/>
</RelativeLayout>