<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="88dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:id="@+id/community_detail_store_picture"
        android:layout_width="90dp"
        android:layout_height="70dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@mipmap/default_pic"
        fresco:placeholderImageScaleType="focusCrop"
        android:layout_centerVertical="true"
        fresco:roundedCornerRadius="2dp" />

    <TextView
        android:paddingTop="4dp"
        android:id="@+id/community_detail_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimens_14sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/community_detail_store_picture"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/community_detail_store_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimens_12sp"
        android:textColor="@color/common_gray"
        android:layout_alignStart="@+id/community_detail_store_name"
        android:layout_below="@+id/community_detail_store_name"
        android:layout_marginTop="3dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/community_detail_store_name"
        android:paddingBottom="6dp">
