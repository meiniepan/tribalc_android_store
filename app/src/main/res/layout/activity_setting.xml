<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg">

        <TextView
            android:id="@+id/serve_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_size" />

        <include
            android:id="@+id/setting_back"
            layout="@layout/back_img_white" />
    </RelativeLayout>

    <include layout="@layout/split_area" />

    <RelativeLayout
        android:id="@+id/setting_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="商户信息"
            android:textSize="@dimen/dimens_16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="线上模式"
            android:textSize="@dimen/dimens_16sp" />

        <Switch
            android:id="@+id/goods_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp" />
    </RelativeLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <RelativeLayout
        android:id="@+id/setting_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提现密码"
            android:textSize="@dimen/dimens_16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <RelativeLayout
        android:id="@+id/setting_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/setting_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="10dp"
            android:text="0.00M"
            android:textSize="@dimen/dimens_16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <RelativeLayout
        android:id="@+id/setting_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检查更新"
            android:textSize="@dimen/dimens_16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <RelativeLayout
        android:id="@+id/setting_recall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/feedback"
            android:textSize="@dimen/dimens_16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <RelativeLayout
        android:id="@+id/mine_message_manager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="首页消息"
            android:textSize="@dimen/dimens_16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="消息推送"
            android:textSize="@dimen/dimens_16sp" />

        <Switch
            android:id="@+id/mine_switch"
            android:layout_width="wrap_content"
            android:checked="true"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp" />
    </RelativeLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tint_bg"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/exit"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="@string/exit_login"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_16sp" />
    </RelativeLayout>

</LinearLayout>