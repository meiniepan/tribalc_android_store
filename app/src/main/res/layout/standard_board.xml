<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="290dp"
        android:layout_height="240dp"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="批量设定价格/库存"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/custom_yellow"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入价格"/>
            <EditText
                android:id="@+id/standard_price"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginStart="10dp"
                android:background="@drawable/text_background"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="请输入统一价格"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入库存"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/text_background"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:inputType="number"
                android:hint="请输入统一库存"
                android:id="@+id/standard_repertory" />
        </LinearLayout>

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您可以只设定价格或只设定库存"
            android:textColor="@color/common_gray"/>
        <include layout="@layout/split_line_no_margin_common"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/standard_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:gravity="center"
                android:textColor="@color/custom_yellow"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divide_gray"/>
            <TextView
                android:id="@+id/standard_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/yes"
                android:gravity="center"
                android:textColor="@color/custom_yellow"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>