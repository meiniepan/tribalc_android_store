<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/serve_list_head"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        fresco:placeholderImage="@mipmap/head_icon"
        fresco:placeholderImageScaleType="centerInside"
        fresco:actualImageScaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺名"
        android:textSize="@dimen/dimens_14sp"
        android:textColor="@color/common_dark"
        android:textStyle="bold"
        android:layout_alignTop="@+id/serve_list_head"
        android:layout_toEndOf="@+id/serve_list_head"
        android:layout_marginStart="17dp"
        android:id="@+id/serve_shop_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="店铺地址"
        android:textColor="@color/common_dark"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/serve_shop_name"
        android:layout_toEndOf="@+id/serve_list_head"
        android:id="@+id/serve_list_tags" />

    <!--<ImageView-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:src="@mipmap/serve_seat"-->
        <!--android:layout_alignBottom="@+id/serve_list_head"-->
        <!--android:layout_alignStart="@+id/serve_shop_name"-->
        <!--android:id="@+id/serve_book_seat" />-->
    <!--<ImageView-->
        <!--android:id="@+id/serve_book_room"-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:src="@mipmap/serve_home"-->
        <!--android:layout_alignTop="@+id/serve_book_seat"-->
        <!--android:layout_alignEnd="@+id/serve_shop_name" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:layout_alignStart="@+id/serve_shop_name"
        android:layout_alignParentBottom="true"
        android:paddingBottom="24dp">
        <TextView
            android:id="@+id/serve_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_18sp"
            android:textStyle="bold"
            android:textColor="@color/common_dark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_12sp"
            android:textColor="@color/common_dark"
            android:text="元/人"
            />
    </LinearLayout>

    <View
        android:id="@+id/serve_line"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_gray"/>

</RelativeLayout>