<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/split_area"/>
    <LinearLayout
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/verify_edit_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/store_name"
            android:layout_width="@dimen/verify_edit_width"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:hint="@string/input_store_name"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:background="@color/divide_gray"/>

    <LinearLayout
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/verify_edit_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经营品类"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/store_type"
            android:layout_width="@dimen/verify_edit_width"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_14sp" />
    </LinearLayout>

    <include layout="@layout/split_area"/>

    <LinearLayout
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/verify_edit_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_main_phone"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/store_phone"
            android:layout_width="@dimen/verify_edit_width"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:inputType="phone"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_14sp" />
    </LinearLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <LinearLayout
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/verify_edit_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他电话"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/store_other_phone"
            android:layout_width="@dimen/verify_edit_width"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:inputType="phone"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_14sp" />
    </LinearLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <LinearLayout
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/store_create_address_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/verify_edit_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发货地址"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/store_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="请选择"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/arrow_right" />
    </LinearLayout>
    <include layout="@layout/split_area"/>

    <LinearLayout
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:id="@+id/create_logo_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/verify_edit_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺LOGO"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/create_logo"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_14sp" />
        <ImageView
            android:src="@mipmap/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include layout="@layout/split_line_no_margin_common" />

    <LinearLayout
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:id="@+id/create_environment_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/verify_edit_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺环境图"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/create_environment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_14sp" />
        <ImageView
            android:src="@mipmap/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include layout="@layout/split_area"/>

    <LinearLayout
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/verify_edit_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐理由"
            android:textSize="16sp" />

        <TextView
            android:layout_width="@dimen/verify_edit_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_14sp"
            android:text="请输入餐厅推荐理由"
            android:id="@+id/editText" />
    </LinearLayout>

    <EditText
        android:id="@+id/create_recommend"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="4dp"
        android:hint="例：艺术美术馆外隐藏的文艺餐厅，花园中心的小阁楼 享受田园般乐趣。"
        android:textSize="@dimen/dimens_12sp"
        android:height="60dp"
        android:background="@drawable/text_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>