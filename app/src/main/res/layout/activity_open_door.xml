<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/open_door_bg"
        >

        <com.gs.buluo.store.view.widget.RippleView
            android:id="@+id/open_door_rippleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/lock_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="@dimen/dimens_25dp"
                android:layout_marginLeft="@dimen/dimens_25dp"
                android:visibility="gone"
                android:id="@+id/open_door_lock"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/lock" />
            <TextView
                android:id="@+id/open_door_text"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="开锁"
                android:textColor="@color/custom_color"
                android:textSize="21sp"/>

        </RelativeLayout>

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/open_door_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/open_door_rippleView"
            android:padding="30dp"
            android:src="@mipmap/open_door_down"
            />

    </RelativeLayout>


</RelativeLayout>
