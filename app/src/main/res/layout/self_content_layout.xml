<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tint_bg">

    <include layout="@layout/split_area" />

    <LinearLayout
        android:id="@+id/mine_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"
        android:background="@color/white"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/mine_store_sign"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/store_icon"
            android:drawablePadding="10dp"
            android:text="@string/create_store"
            android:textSize="@dimen/dimens_16sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right"/>
    </LinearLayout>

    <include layout="@layout/split_area" />

    <LinearLayout
        android:id="@+id/mine_wallet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/wallet_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/my_wallet"
            android:textSize="@dimen/dimens_16sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right"/>
    </LinearLayout>

    <include layout="@layout/split_line_margin" />

    <LinearLayout
        android:id="@+id/mine_verify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/identify_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/store_identify"
            android:textSize="@dimen/dimens_16sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right"/>
    </LinearLayout>
</LinearLayout>