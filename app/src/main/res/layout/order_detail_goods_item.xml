<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:id="@+id/order_detail_item_goods_head"
        android:layout_width="85dp"
        android:layout_height="79dp"
        fresco:placeholderImage="@mipmap/head_icon"
        fresco:placeholderImageScaleType="fitCenter"
        android:layout_centerVertical="true"
        fresco:roundedCornerRadius="2dp" />

    <TextView
        android:id="@+id/order_detail_detail_item_goods_name"
        android:paddingTop="4dp"
        android:paddingStart="6dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_toRightOf="@+id/order_detail_item_goods_head"
        android:layout_marginStart="6dp" />

    <TextView
        android:id="@+id/order_detail_item_goods_money"
        android:layout_width="wrap_content"
        android:text="1111"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_marginStart="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_detail_detail_item_goods_name"
        android:layout_alignStart="@+id/order_detail_detail_item_goods_name"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/order_detail_item_goods_size_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_12sp"
            android:textColor="@color/common_gray" />

        <TextView
            android:id="@+id/order_detail_item_goods_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_12sp"
            android:textColor="@color/common_gray" />

        <TextView
            android:layout_marginStart="8dp"
            android:id="@+id/order_detail_item_goods_color_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_12sp"
            android:textColor="@color/common_gray" />

        <TextView
            android:id="@+id/order_detail_item_goods_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_12sp"
            android:textColor="@color/common_gray" />

        <TextView
            android:id="@+id/order_detail_item_goods_number"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_gray" />
    </LinearLayout>
</RelativeLayout>