<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#2A2A2A">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发布商品"
            android:textColor="#fff"
            android:textSize="@dimen/title_size" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#000" />

        <include
            android:id="@+id/back"
            layout="@layout/back_img_white" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/split_area"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货号"/>
                <EditText
                    android:id="@+id/create_goods_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:hint="请输入商品货号"/>
            </LinearLayout>
            <include layout="@layout/split_line_no_margin_common"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:hint="请输入商品运费金额"
                    android:id="@+id/create_goods_fee" />
            </LinearLayout>
            <include layout="@layout/split_line_no_margin_common"/>
            <LinearLayout
                android:id="@+id/create_goods_desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品描述"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>
            <include layout="@layout/split_area"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="商品标签(最多选三个)"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/create_goods_category"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <EditText
                android:id="@+id/create_goods_tags"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:background="@drawable/text_background"
                android:hint="请输入商品标签,用‘、’号隔开，如饮品、酒"
                android:textSize="@dimen/dimens_12sp"
                android:paddingStart="6dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="每个标签最多5个字，选择标签与添加的标签最多共3个"
                android:textColor="@color/common_gray"
                android:textSize="@dimen/dimens_12sp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tint_bg">
        <Button
            android:id="@+id/create_goods_save"
            style="@style/button_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="放入仓库"
            android:background="@color/custom_yellow_shallow"
            />
        <Button
            android:id="@+id/create_goods_publish"
            style="@style/button_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="立即发布"
            />
    </LinearLayout>
</LinearLayout>