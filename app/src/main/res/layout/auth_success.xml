<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_item_height"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="营业执照"/>
        <include layout="@layout/split_line_margin"/>
        <ImageView
            android:id="@+id/auth_licence"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="16dp"/>
        <include layout="@layout/split_area"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_item_height"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="身份证"/>
        <include layout="@layout/split_line_margin"/>
        <ImageView
            android:id="@+id/auth_id_front"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_height="240dp"
            android:layout_marginBottom="16dp"/>
        <include layout="@layout/split_line_margin"/>
        <ImageView
            android:id="@+id/auth_id_front_back"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_height="240dp"
            android:layout_marginBottom="16dp"/>
        <include layout="@layout/split_area"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_item_height"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="行业许可证"/>
        <include layout="@layout/split_line_margin"/>
        <ImageView
            android:id="@+id/auth_permit"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin" />
        <View
            android:background="@color/tint_bg"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>
</ScrollView>