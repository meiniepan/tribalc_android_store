<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发布商品"
            android:textSize="@dimen/title_size" />
        <include
            android:id="@+id/back"
            layout="@layout/back_img_white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.youth.banner.Banner
                        android:id="@+id/goods_create_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:indicator_height="8dp"
                        app:indicator_margin="6dp"
                        app:indicator_width="8dp">
                    </com.youth.banner.Banner>
                </FrameLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/goods_create_del_pic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/delete_garbage" />

                    <ImageView
                        android:id="@+id/goods_create_add_first"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/add_goods_pic" />

                    <CheckBox
                        android:id="@+id/goods_create_main"
                        android:text="设为主图"
                        android:textColor="@color/custom_yellow"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="8dp"
                        android:drawableLeft="@drawable/check_selector"
                        android:drawablePadding="4dp"
                        android:button="@null"/>

                    <ImageView
                        android:id="@+id/goods_create_add_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="15dp"
                        android:src="@mipmap/add_goods_pic"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:minHeight="40dp">
                <EditText
                    android:id="@+id/goods_create_title_detail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top"
                    android:layout_marginBottom="10dp"
                    android:hint="输入商品详情标题"/>
                <TextView
                    android:id="@+id/goods_create_title_left"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/dimens_12sp"
                    android:textColor="@color/common_gray"
                    />
                <TextView
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/dimens_12sp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/60"/>
            </LinearLayout>
            <include layout="@layout/split_line_margin"/>
            <LinearLayout
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="列表标题"/>
                <EditText
                    android:background="@null"
                    android:id="@+id/goods_create_title"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="例:现货包邮MAC,GLAM限量版"/>
            </LinearLayout>
            <include layout="@layout/split_line_margin"/>
            <LinearLayout
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简单说明"/>

                <EditText
                    android:id="@+id/goods_create_desc"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:hint="请用一句话概括商品"/>

                <TextView
                    android:id="@+id/goods_create_short_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/dimens_12sp"
                    android:textColor="@color/common_gray"
                    />
                <TextView
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/dimens_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/20"/>
            </LinearLayout>
            <include layout="@layout/split_area"/>
            <LinearLayout
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类别"/>
                <TextView
                    android:id="@+id/goods_create_category"
                    android:layout_marginStart="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <include layout="@layout/split_line_margin"/>
            <LinearLayout
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌"/>
                <EditText
                    android:id="@+id/create_goods_brand"
                    android:layout_marginStart="50dp"
                    android:background="@null"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入商品品牌"/>
            </LinearLayout>
            <include layout="@layout/split_line_margin"/>
            <LinearLayout
                android:id="@+id/ll_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/self_item_height">
                    <TextView
                        android:id="@+id/goods_standard_key1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一级规格"/>

                    <EditText
                        android:id="@+id/goods_standard_value1"
                        android:layout_marginStart="50dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="必填"
                        android:background="@null"
                        android:maxLines="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <include layout="@layout/split_line_margin"/>
                <LinearLayout
                    android:id="@+id/ll_second_standard"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/self_item_height">
                    <TextView
                        android:id="@+id/goods_standard_key2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二级规格"/>
                    <EditText
                        android:id="@+id/goods_standard_value2"
                        android:layout_marginStart="50dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLines="1"
                        android:hint="必填"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <include layout="@layout/split_line_margin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销售价格"/>

                <EditText
                    android:id="@+id/goods_create_sale"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入商品销售价格"/>
            </LinearLayout>
            <include layout="@layout/split_line_margin"/>
            <LinearLayout
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原始价格"/>
                <EditText
                    android:id="@+id/goods_create_origin"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入商品原始价格"/>
            </LinearLayout>
            <include layout="@layout/split_line_margin"/>
            <LinearLayout
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台利润"/>
                <EditText
                    android:id="@+id/goods_create_profit"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入平台利润"/>
            </LinearLayout>
            <include layout="@layout/split_line_margin"/>
            <LinearLayout
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存量"/>
                <EditText
                    android:id="@+id/goods_create_stock"
                    android:layout_marginStart="36dp"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入商品库存量"/>
            </LinearLayout>
            <include layout="@layout/split_area"/>
            <LinearLayout
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原产国"/>
                <EditText
                    android:id="@+id/goods_create_source"
                    android:layout_marginStart="36dp"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:hint="请输入商品原产地"/>
            </LinearLayout>
            <include layout="@layout/split_area"/>
            <RelativeLayout
                android:id="@+id/rl_goods_main"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/self_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设为主商品"/>
                <RadioButton
                    android:id="@+id/choose_item_check"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/choose_selector"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:button="@null" />
            </RelativeLayout>
            <include layout="@layout/split_area"/>
            <Button
                android:id="@+id/goods_create_next"
                android:text="@string/next"
                style="@style/button_style"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>